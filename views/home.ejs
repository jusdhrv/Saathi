<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/home.css">
    <title>Home - Saathi</title>
</head>

<body>
    <!-- Heading -->
    <center>
        <font size=200px>
            <h1 id="title">SAATHI</h1>
            <h1 id="title2">GUARDIAN'S PORTAL</h1>
        </font>

        <hr>
    </center>

    <form action="/addtask" method="POST">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Current Task/Event Tab -->
                            <div class="card region-outer">
                                <div class="card region-inner">
                                    <h1>Current:</h1>
                                    <hr>
                                    <h4 class="task">
                                        <%= current_task %>
                                    </h4>
                                </div>
                            </div>
                            <!-- Upcoming Tasks/Events Tab -->
                            <div class="card region-outer">
                                <div class="card region-inner">
                                    <h1>Upcoming:</h1>
                                    <hr>
                                    <% for( var i=0; i < task.length; i++){ %>
                                        <li class="task"><input type="checkbox" name="check" value="<%= task[i] %>" />
                                            <%= task[i] %>
                                        </li>
                                        <% } %>

                                            <button formaction="/removetask" type="submit" id="top"> Remove </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Schedule Task/Event Tab -->
                            <div class="card region-outer">
                                <div class="card region-inner">
                                    <h1>What's Up?</h1>
                                    <hr>
                                    <input type="text" name="newtask" placeholder="Add new task/event here...">
                                    <button> Add Task/Event </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="col-md-12">
                    <center>
                        <a href="/history" class="btn btn-primary" role="button">
                            Task History
                        </a>
                    </center>
                </div>
            </div>
        </div>
    </form>

</body>

</html>