<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/home.css">
    <title>History - Saathi</title>
</head>

<body>
    <!-- Heading -->
    <center>
        <font size=200px>
            <h1 id="title">SAATHI</h1>
            <h1 id="title2">GUARDIAN'S PORTAL</h1>
        </font>

        <hr>

        <center>
            <a href="/" class="btn btn-primary" role="button">
                Back
            </a>
        </center>
    </center>


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Upcoming Tasks/Events Tab -->
                        <div class="card region-outer">
                            <div class="card region-inner">
                                <h1>Current:</h1>
                                <hr>
                                <% for( var i=0; i < task.length; i++){ %>
                                    <li class="task">
                                        <%= task[i] %>
                                    </li>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- Schedule Task/Event Tab -->
                        <div class="card region-outer">
                            <div class="card region-inner">
                                <h1>Completed:</h1>
                                <hr>
                                <% for( var i=0; i < complete.length; i++){ %>
                                    <li class="task">
                                        <%= complete[i] %>
                                    </li>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>